@model List<Account>
@{
    ViewData["Title"] = "لیست محصولات";
}
<br />
<br />
<br />

<form method="post" class="mt-5">
    <div class="row">
        <div class="table-responsive text-center mt-5">
            <a class="btn btn-success  btn-block btn-lg border border-white" asp-controller="Product" asp-action="Create" asp-route-Id="">  اضافه کردن کاربر  </a>
        </div>
        <div class="table-responsive text-center mt-5">
            <a class="btn btn-success  btn-block btn-lg border border-white" asp-controller="Admin" asp-action="AdminActions" asp-route-Id="">  لیست محصولات   </a>
        </div>


    </div>

</form >
<div class="table-responsive text-center mt-4">


    <table class="table table-bordered table-striped table-hover bg-warning">
        <thead class="table-warning bg-danger">
            <tr class="text-secondary">
                <td>#</td>
                <td>نام</td>
                <td>ایمیل</td>
                <td>رمزعبور</td>
                <td>تلفن</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {

                <tr>
                    <th class="bg-danger text-white">@item.Id</th>
                    <td class="text-white">@item.Name</td>
                    <td class="text-white">@item.Email</td>
                    <td class="text-white">@item.Password</td>
                    <td class="text-white">@item.Phone</td>

                </tr>

            }
        </tbody>
    </table>

</div>
